<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Lesson3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Widget.Lesson3.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">#FFFF0000</item>
        <item name="cornerFamily">cut</item>
        <item name="cornerRadius">10dp</item>
    </style>

    <style name="TextAppearance.Lesson3.Main" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">40sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>
</resources>